<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
        
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
            
<form id="delete-inventory-form" action="/inv/drop" method="post">
    <div>Confirm Deletion - The delete is permanent.</div>

    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" required readonly pattern=".{3,}" placeholder="Min of 3 characters" value="<%= locals.inv_make %>">
    
    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" required readonly pattern=".{3,}" placeholder="Min of 3 characters" value="<%= locals.inv_model %>">
   
    <label for="inv_price">Price</label>
    <input type="text" id="inv_price" name="inv_price" required readonly pattern="^\d+(\.\d+)?$" placeholder="decimal or integer" value="<%= locals.inv_price %>">
    
    <label for="inv_year">Year</label>
    <input type="text" id="inv_year" name="inv_year" required readonly pattern="^\d{4}$" placeholder="4-digit year" value="<%= locals.inv_year %>">
    
    <input id="delete-inventory-submit" type="submit" value="Delete">

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>