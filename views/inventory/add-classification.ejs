<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>
        
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>
        
<form id="add-classification-form" action="/inv/addClass" method="post">
    <label for="classification_name">Classification Name</label>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>">
    <div>Name must be alphabetic characters only, no spaces.</div>
    <input id="add-classification-submit" type="submit" value="Add Classification">
</form>